.container
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-signin
      %h2.form-signin-heading Please sign in
      %label.sr-only{for: "inputEmail"} Email address
      = f.email_field :email, autofocus: "", placeholder: "Email address", required: "", class: "form-control", id: "inputEmail"
      / %input#inputEmail.form-control{autofocus: "", placeholder: "Email address", required: "", type: "email"}/
      %label.sr-only{for: "inputPassword"} Password
      = f.password_field :password, autofocus: "", placeholder: "Password", required: "", class: "form-control", id: "inputPassword"
      / %input#inputPassword.form-control{placeholder: "Password", required: "", type: "password"}/
      .checkbox
        %label
          %input{type: "checkbox", value: "remember-me"}/
          Remember me
      = f.submit "Sign in", class: "btn btn-lg btn-primary btn-block"
      / %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Sign in
    .text-center
      %p
        Not a member?
        %a{href: "/users/sign_up"} Sign up now


