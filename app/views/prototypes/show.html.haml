.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = link_to "", user_path(@prototype.user_id)
          %img.media-object{alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64", src: "data:image/svg+xml;base64,", style: "width: 64px; height: 64px;"}/
        .media-body
          %h4#top-aligned-media.media-heading
            = @prototype.title
          .proto-user
            = link_to "by #{@prototype.user.name}", user_path(@prototype.user_id)
            %span.degree
              = @prototype.user.works

    #like-button
      = render "like"

  .row
    .col-md-9
      = image_tag(@prototype.capturedimages.main.first.picture, class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        - @prototype.capturedimages.sub.each do |sub_image|
          %li.list-group-item
            = image_tag(sub_image.picture, class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @prototype.catchcopy
    .col-md-6
      %h4 Concept
      %p
        = @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe

  #comments
    = render "comment"
