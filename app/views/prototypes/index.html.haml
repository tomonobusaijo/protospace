.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{role: "presentation"}
          = link_to 'Popular PROTO', "#"
        %li{role: "presentation"}
          = link_to 'Newest PROTO', "#"
      %button{type: "button", class: "btn btn-default col-lg-1"} View Tags

.container.proto-list
  .row
    - @prototype.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          - if prototype.capturedimages.exists?
            = link_to image_tag(prototype.capturedimages.main.first.picture), prototype_path(prototype.id)
          - else
            = link_to image_tag("noimage2.png"), prototype_path(prototype.id)
          .caption
            %h3
              = prototype.title
            .proto-meta
              .proto-user
                = link_to "by #{prototype.user.name}", user_path(prototype.user_id)
              .proto-posted
                Apr 26
            %ul.proto-tag-list.list-inline
              %li
                = link_to 'iPad', "#", class: "btn btn-default"
              %li
                = link_to 'wireframe', "#", class: "btn btn-default"

