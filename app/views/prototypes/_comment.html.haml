.row.proto-comments
  %h4.col-md-12
    Comments
    %span.num
      ( #{@comments.count} )
  .col-md-8
    - @comments.each do |comment|
      .media
        .media-left
          %a{href: "#"}
            %img.media-object{alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64", src: "data:image/svg+xml;base64,", style: "width: 64px; height: 64px;"}/
        .media-body
          %h4#top-aligned-media.media-heading
            = comment.user.name
            %a.anchorjs-link{href: "#top-aligned-media"}
              %span.anchorjs-icon
          %p
            = comment.content

    = form_for [ @prototype, @comment ] , class: "form-inline", remote: true do |f|
      %h4 Write a comment
      .row
        .form-group.col-md-10
          = f.text_area :content, placeholder: "Your comments", rows: 4, class: "form-control"
        .form-group.col-md-2
          = f.submit "Comment", class: "btn btn-primary"
