.col-md-6.text-right
  - if user_signed_in?
    - if @prototype.like_user(current_user.id)
      = button_to prototype_like_path(@likes, prototype_id: @prototype.id), method: :delete, class: "btn btn-default decrement-button", remote: true do
        = image_tag("icon_pink_heart.png")
        Like
        %span#like-button
          = @prototype.likes_count
    - else
      = button_to prototype_likes_path(@prototype), class: "btn btn-default increment-button", remote: true do
        = image_tag("icon_heart.svg")
        Like
        %span#like-button
          = @prototype.likes_count
  - else
    = image_tag("icon_heart.svg")
    Like
    %span#like-button
      = @prototype.likes_count
