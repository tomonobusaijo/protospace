.container.user-page
  %header.user-nav
    .media
      .media-left
        %a{href: "#"}
          %img.media-object{alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64", src: "data:image/svg+xml;base64,", style: "width: 64px; height: 64px;"}/
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            29
            %i Projects
        .proto-user
          %span.degree
            = @user.member
        .row
          .col-md-6
            %h4 Profile
            %p
              = @user.profile
          .col-md-6
            %h4 Works
            %p
              = @user.works

.container.proto-list
  .row
    - @user.prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to image_tag(prototype.capturedimages.main.first.picture), prototype_path(prototype.id)
          .caption
            %h3
              = prototype.title
            .proto-meta
              .proto-user
                = link_to "by #{prototype.user.name}", user_path(prototype.user_id)
              .proto-posted
                Apr 26
              - if current_user.id == prototype.user_id
                .proto-edit
                  = link_to "編集", edit_prototype_path(prototype.id)
                .proto-delete
                  = link_to "削除", "/prototypes/#{prototype.id}", controller: :prototypes, method: :delete
            %ul.proto-tag-list.list-inline
              %li
                = link_to 'iPad', "#", class: "btn btn-default"
              %li
                = link_to 'wireframe', "#", class: "btn btn-default"

.text-center
  %ul.pagination
    = paginate(@prototype)
