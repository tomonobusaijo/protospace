.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{role: "presentation"}
          = link_to 'Popular PROTO', root_path
        %li{role: "presentation"}
          = link_to 'Newest PROTO', prototypes_newest_index_path
      %button{type: "button", class: "btn btn-default col-lg-1"}
        = link_to 'View Tags', tags_path

.container
  .row
    .tag-header
      %span # #{@tag}
    - @prototype.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to image_tag(prototype.capturedimages.main.first.picture), prototype_path(prototype.id)
          .caption
            %h3
              = prototype.title
            .proto-meta
              .proto-user
                = link_to "by #{prototype.user.name}", user_path(prototype.user_id)
              .proto-posted
                Apr 26
            %ul.proto-tag-list.list-inline
              - prototype.tags.each do |tag|
                %li
                  =link_to "#{tag.name}", tag_path(tag.name), class: "btn btn-default"
