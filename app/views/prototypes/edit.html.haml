= form_for @prototype do |f|
  .container.proto-new
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          = f.text_field :title, placeholder: "Title", class: "proto-new-title"
      .row
        .col-md-12
          = f.fields_for(:capturedimages, @prototype.capturedimages.main.first) do |images|
            .cover-image-upload
              = images.file_field :picture, required: true, class: "proto_uploader"
              %img#js-main_preview{src:""}
              = images.hidden_field :role, value: "main"
        .col-md-12
          %ul.proto-sub-list.list-group
            - if @prototype.capturedimages.sub.first
              %li.list-group-item.col-md-4
                = f.fields_for(:capturedimages, @prototype.capturedimages.sub.first) do |images|
                  #image_0_uploader.image-upload
                    = images.file_field :picture, class: "proto_uploader"
                    %img#js-sub_0_preview{src:""}
                    = images.hidden_field :role, value: "sub"
            - if @prototype.capturedimages.sub.second
              %li.list-group-item.col-md-4
                = f.fields_for(:capturedimages, @prototype.capturedimages.sub.second) do |images|
                  #image_1_uploader.image-upload
                    = images.file_field :picture, class: "proto_uploader"
                    %img#js-sub_1_preview{src:""}
                    = images.hidden_field :role, value: "sub"
            %li.list-group-item.col-md-4
              .image-upload-plus
                %span +
      .row.proto-description
        .col-md-12
          = f.text_field :catchcopy, placeholder: "Catch Copy"
        .col-md-12
          = f.text_area :concept, placeholder: "Concept", cols: "30", rows: "4"
        .col-md-12
          %h4 Tag List
          .row
            .col-md-3
              = text_field_tag 'prototype[tag][]', "", placeholder: "Web Design"
            .col-md-3
              = text_field_tag 'prototype[tag][]', "", placeholder: "UI"
            .col-md-3
              = text_field_tag 'prototype[tag][]', "", placeholder: "Application"
      .row.text-center.proto-btn
        = f.submit "Publish", class: "btn btn-lg btn-primary btn-block"

%script
